<div id="<%= dom_id post %>" class="post-container" >
  <p>
    <%= post.title %>
  </p>
  <p>
    <%= post.description %>
  </p>
  <p>
    <%= post.keywords %>
  </p>
  <% if user_signed_in? %>
    <% like = current_user.likes.find_by(post: post) %>

    <%# this renders the like button %>
    <% if like.nil? %>
    <%= button_to "Like", likes_path, params: {like: { post_id: post.id }}, method: :post %>

    <%# This renders the unlike button. %>
    <% else %>
    <%= button_to "Unlike", like_path(like), method: :delete %>
    <% end %>
  <% end %>

  <p> <%= post.likes.count %> Likes </p>
  
  <% post.images.each do |image| %>
    <%= image_tag(image, style: "object-fit: cover; width: 300px; height: 600px") %>
  <%end %>
</div>
<p>
<%= link_to post.user.email, post.user, style:"z-index:" %>
</p>